@model CarShowRoom.Models.ViewModels.BrandDetailsModel

@{
    ViewData["Title"] = "Brand Details";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewData["Title"] - CarShowRoom</title>
    <link href="https://fonts.googleapis.com/css?family=Poppins:400,600" rel="stylesheet">
    <link rel="stylesheet" href="~/assets/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/assets/css/style.css">
    <style>
        /* Modern styling */
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f9f9f9;
            font-size:17px;
            color:black;
            
            
        }

        .brand-header {
            text-align: center;
            margin-top: 30px;
        }

            .brand-header img {
                border-radius: 8px;
                width: 120px;
                height: 120px;
            }

            .brand-header h1 {
                font-weight: 600;
                color: #333;
            }

        .car-table-container {
            margin: 30px auto;
            width: 1500px;
            max-width: 2000px;
            background: #fff;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .table th, .table td {
            vertical-align: middle;
            text-align: center;
        }

        .table th {
            background-color: #333;
            color: white;
        }

        .table tbody tr:hover {
            background-color :lightgrey;
            text-align:center
        }

        .btn-back {
            display: inline-block;
            margin-top: 20px;
            background-color: #333;
            color: white;
            padding: 10px 20px;
            border-radius: 5px;
            text-decoration: none;
        }

            .btn-back:hover {
                background-color: #555;
                color: white;
            }

        .car-image {
            width: 300px;
            max-width: 250px;
            border-radius: 5px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        ul {
            list-style-type: disc;
            padding-left: 20px; /* Adjust as needed to align text properly */
        }

            ul li {
                margin-bottom: 5px; /* Adds spacing between points if needed */
            }
    </style>
</head>

<body>
    <!-- Set the id dynamically for the brand section based on the BrandName -->
    <div id="@Model.BrandName.Replace(" ", "").ToLower()" class="brand-header">
        <img src="~/assets/img/@Model.BrandImg" alt="@Model.BrandName Logo" />
        <h1>@Model.BrandName</h1>
    </div>


    <div class="car-table-container">
        <h2 class="text-center">Car Models for @Model.BrandName</h2>
        <table class="table table-striped table-hover mt-4">
            <thead>
                <tr>
                    <th>Car Model</th>
                    <th>Image</th>
                    <th>Description</th>
                    <th>Price</th>
                   
                    
                </tr>
            </thead>
            <tbody>
                @foreach (var carModel in Model.CarModels)
                {
                    <tr>
                        <td>@carModel.CarModelName</td>
                        <td><img src="~/assets/img/@carModel.CarImage" alt="Car Image" class="car-image" /></td>
                        <td>
                            <ul style="text-align: center; list-style-type: disc;">
                                @foreach (var point in carModel.Description.Split('\n'))
                                {
                                    <li>@point</li>
                                }
                            </ul>
                        </td>
                        <td>@carModel.Price.ToString("C")</td>
                       

                       
                    </tr>
                }
            </tbody>
        </table>
    </div>


    <div class="text-center">
        <a asp-action="Index" class="btn-back">Back to List</a>
    </div>



    <script src="~/assets/js/jquery.js"></script>
    <script src="~/assets/js/bootstrap.min.js"></script>
    <script src="~/assets/js/custom.js"></script>
</body>
</html>
